data = [
    {"question": "What is Baby Yoda's real name?", "answer": "Grogu"},
    {"question": "Where did Obi-Wan take Luke after his birth?", "answer": "Tatooine"},
    {"question": "What year did the first Star Wars movie come out?", "answer": "1977"},
    {"question": "Who built C-3PO?", "answer": "Anakin Skywalker"},
    {"question": "Anakin Skywalker grew up to be who?", "answer": "Darth Vader"},
    {"question": "What species is Chewbacca?", "answer": "Wookiee"}
]

def star_wars_quiz():
    correct = 0
    wrong = 0
    wrong_answers = []

    for q in data:
        user_answer = input(q["question"] + " ").strip()
        if user_answer.lower() == q["answer"].lower():
            correct += 1
        else:
            wrong += 1
            wrong_answers.append((q["question"], user_answer, q["answer"]))

    print(f"\nCorrect answers: {correct}, Incorrect answers: {wrong}")
    
    if wrong > 0:
        print("\nHere are the ones you got wrong:")
        for q, user_ans, correct_ans in wrong_answers:
            print(f"- {q}\n  Your answer: {user_ans}\n  Correct answer: {correct_ans}\n")

    if wrong > 3:
        print("You got more than 3 wrong answers. Try again!")
        star_wars_quiz()

star_wars_quiz()


 
